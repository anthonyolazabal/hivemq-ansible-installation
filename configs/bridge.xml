<hivemq-bridge-extension>
    <bridges>
        <bridge>
            <enabled>true</enabled>
            <name>LAYER3-TO-LAYER4</name>
            <remote-broker>
                <authentication>
                    <mqtt-simple-authentication>
                        <username>bridge</username>
                        <password>password</password>
                    </mqtt-simple-authentication>
                </authentication>
                <connection>
                    <static>
                        <host>192.168.0.254</host>
                        <port>1883</port>
                    </static>
                </connection>
                <mqtt>
                    <version>5</version>
                    <clean-start>false</clean-start>
                    <session-expiry>3600</session-expiry>
                    <keep-alive>60</keep-alive>
                    <flow-control>
                            <send-maximum>100</send-maximum>
                            <outbound-publish-rate-limit>100</outbound-publish-rate-limit>
                    </flow-control>
                </mqtt>
            </remote-broker>
            <loop-prevention>
                <hop-count-limit>3</hop-count-limit>
                <enabled>true</enabled>
            </loop-prevention>
            <topics>
                <topic>
                    <filter>#</filter>
                    <mode>PUB</mode>
                    <destination>{#}</destination>
                    <preserve-retained>true</preserve-retained>
                </topic>
            </topics>
        </bridge>
    </bridges>
</hivemq-bridge-extension>